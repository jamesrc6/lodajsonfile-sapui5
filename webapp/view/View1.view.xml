<mvc:View
    controllerName="axelera.loadjsonfile.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>

                        <Table class="sapUiSizeCompact" id="table1" items="{products>/Products}"
                            selectionChange="onselectionChange">
                            <columns>
                                <Column id="_IDGenColumn1">
                                    <Label id="_IDGenLabel1" text="Product ID"/>
                                </Column>
                                <Column id="_IDGenColumn2">
                                    <Label id="_IDGenLabel2" text="Name"/>
                                </Column>
                                <Column id="_IDGenColumn3">
                                    <Label id="_IDGenLabel3" text="Categoria"/>
                                </Column>
                            </columns>
                            <ColumnListItem id="_IDGenColumnListItem1" press="onPress">
                                <Text id="_IDGenText1" text="{products>ProductId}"></Text>
                                <Text id="_IDGenText2" text="{products>Name}"></Text>
                                <Text id="_IDGenText3" text="{products>Category}"></Text>
                            </ColumnListItem>
                        </Table>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
